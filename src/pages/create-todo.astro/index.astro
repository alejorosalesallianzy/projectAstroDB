<div class="max-w-md mx-auto bg-white roudend p-6">
    <h2 class="text-xl font-semibold mb-4">Forms</h2>
    <form method="post">
        <div class="mb-4">
            <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
            <input type="text" id="title" name="title" class="mt-1 py-3 border-2 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm"/>
